{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "local://hvocabularies/hvocabulary-v1.0.0.json",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "description": {
      "type": "object",
      "description": "Description of vocabulary item. Key are locale codes.",
      "patternProperties": {
        "^[a-z]{2}$": {
          "type": "string"
        }
      }
    },
    "icon": {
      "type": "string"
    },
    "id": {
      "$ref": "local://definitions-v1.0.0.json#/identifier"
    },
    "pid": {
      "$ref": "local://definitions-v1.0.0.json#/internal-pid"
    },
    "props": {
      "type": "object",
      "patternProperties": {
        "^.*$": {
          "type": "string"
        }
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "title": {
      "type": "object",
      "description": "Title of vocabulary item. Keys are locale codes.",
      "patternProperties": {
        "^[a-z]{2}$": {
          "type": "string"
        }
      }
    },
    "type": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string"
        },
        "pid_type": {
          "type": "string"
        }
      }
    },
    "relatedURI": {
      "type": "object",
      "description": "Related URIs",
      "patternProperties": {
        ".*": {
          "type": "string"
        }
      }
    },
    "alpha3Code": {
      "type": "object",
      "description": "alpha3Code",
      "patternProperties": {
        ".*": {
          "type": "string"
        }
      }
    },
    "nonpreferredLabels": {
      "type": "array",
      "description": "nonpreferredLabels"
    },
    "nameTranslated": {
       "type": ["string", "null"]
    },
    "RID": {
      "type": ["string", "null"]
    },
    "fullName": {
      "type": "string"
    },
    "acronym": {
      "type": ["string", "null"]
    },
    "ICO": {
      "type": ["integer", "null"]
    },
    "nameType": {
      "type": ["string", "null"]
    },
    "marcCode": {
      "type": ["string", "null"]
    },
    "dataCiteCode": {
      "type": ["string", "null"]
    },
    "formerTitles": {
      "type": "array"
    },
    "aliases": {
      "type": "array"
    },
    "CEA": {
      "type": "boolean"
    },
    "contexts": {
      "type": "array"
    },
    "pair": {
      "type": ["string", "null"]
    },
    "hint": {
      "type": "object",
      "description": "hint",
      "patternProperties": {
        ".*": {
          "type": "string"
        }
      }
    },
    "coarType": {
      "type": ["string", "null"]
    },
    "dataCiteType": {
      "type": ["string", "null"]
    }
  }
}
